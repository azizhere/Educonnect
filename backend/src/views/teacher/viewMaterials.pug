extends ../layouts/main

block content
  .container.mt-4
    h2 Course Materials

    if materials.length
      table.table.table-bordered.mt-3
        thead
          tr
            th Title
            th File
            th Actions
        tbody
          each m in materials
            tr
              td= m.title
              td
                if m.file_url
                  a.btn.btn-success.btn-sm(href=m.file_url target="_blank") Download
                else
                  | No file
              td
                form(method="POST" action=`/teacher/materials/delete/${m.id}` onsubmit="return confirm('Are you sure you want to delete this material?');")
                  button.btn.btn-danger.btn-sm(type="submit") Delete
    else
      p No materials uploaded yet.

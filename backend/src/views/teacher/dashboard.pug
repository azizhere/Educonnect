extends ../layouts/main

block content
  .container.mt-4
    h2 Teacher Dashboard

    .row.mt-4
      .col-md-4
        .card.shadow-sm
          .card-body
            h4 Total Assigned Courses
            p.display-6 #{courses.length}
            a.btn.btn-sm.btn-primary.mt-2(href="/teacher/courses") View All Courses

      .col-md-4
        .card.shadow-sm
          .card-body
            h4 Pending Submissions
            p.display-6 #{pending}
            a.btn.btn-sm.btn-warning(href="/teacher/submissions") View Pending

      //- .col-md-4
      //-   .card.shadow-sm
      //-     .card-body
      //-       h4 Timetable
      //-       a.btn.btn-sm.btn-info(href="/teacher/timetable") View Timetable

      // Timetable Card
      .col-md-4
        .card.shadow-sm
          .card-body
            h4 Upcoming Timetable
            if timetable.length
              ul
                each slot in timetable
                  li #{slot.day} | #{slot.start_time} - #{slot.end_time} | #{slot.class_name}
            else
              p.text-muted No timetable available
            a.btn.btn-sm.btn-info.mt-2(href="/teacher/timetable") View Full Timetable


extends ../layouts/main

block content
  h2 Mark Attendance

  form#attendanceForm(method="POST")
    input(type="date" name="date" required)

    table.table
      thead
        tr
          th Student
          th Present
          th Absent
          th Late
      tbody
        each student in students
          tr
            td= student.name
            td: input(type="radio" name=`attendance[${student.id}]` value="present")
            td: input(type="radio" name=`attendance[${student.id}]` value="absent")
            td: input(type="radio" name=`attendance[${student.id}]` value="late")

    button.btn.btn-primary(type="submit") Save

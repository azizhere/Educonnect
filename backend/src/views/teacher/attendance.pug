extends ../layouts/main

block content
  .container.mt-4
    h2 Mark Attendance

    form(method="POST")
      .mb-3
        label Date
        input.form-control(type="date" name="date" required)

      table.table.table-bordered
        thead
          tr
            th Student
            th Present
            th Absent
            th Late

        tbody
          each s in students
            tr
              td= s.name
              td: input(type="radio" name=`attendance[${s.id}]` value="present")
              td: input(type="radio" name=`attendance[${s.id}]` value="absent")
              td: input(type="radio" name=`attendance[${s.id}]` value="late")

      button.btn.btn-primary.mt-3(type="submit") Save Attendance

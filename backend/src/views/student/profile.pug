extends ../layouts/main.pug

block content
  .container.mt-5
    h1.text-center.mb-4.animate-fadeIn My Profile

    .card.shadow.p-4.animate-slideUp
      .row.mb-3
        .col-md-6
          h5.text-muted Name
          p #{student.name}
        .col-md-6
          h5.text-muted Email
          p #{student.email}

      .row.mb-3
        .col-md-6
          h5.text-muted Roll Number
          p #{student.roll_no}
        .col-md-6
          h5.text-muted Department
          p #{student.department}

      .row.mb-3
        .col-md-6
          h5.text-muted Account Created
          p #{student.created_at.toDateString()}

  // Animations
  style.
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    .animate-fadeIn {
      animation: fadeIn 0.6s ease-out forwards;
    }

    @keyframes slideUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-slideUp {
      animation: slideUp 0.5s ease-out forwards;
    }

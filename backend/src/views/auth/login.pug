extends ../layouts/main.pug

block content
  .container(style="max-width:450px; margin-top:40px;")
    h2 Login

    if message
      p(style="color:red") #{message}
      script.
        showToast("#{message}")


    form(action="/auth/login" method="POST")
      .form-group
        label Email
        input.form-control(type="email" name="email" required)

      .form-group.mt-3
        label Password
        input.form-control(type="password" name="password" required)

      button.btn.btn-primary.mt-3(type="submit") Login

      p.mt-3
        | Don't have an account?
        a(href="/auth/register" style="margin-left:5px") Register

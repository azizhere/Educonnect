extends ../layouts/main.pug

block content
  .container(style="max-width:500px; margin-top:40px;")
    h2 Sign Up

    if message
      p(style="color:red") #{message}

    form(action="/auth/register" method="POST")
      .form-group
        label Name
        input.form-control(type="text" name="name" required)

      .form-group
        label Email
        input.form-control(type="email" name="email" required)

      .form-group
        label Password
        input.form-control(type="password" name="password" required)

      .form-group
        label Role
        select.form-control(name="role")
          option(value="student") Student
          option(value="teacher") Teacher
          option(value="admin") Admin

      button.btn.btn-primary(type="submit") Register
      a(href="/auth/login" style="margin-left:10px") Login
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
  .container
    a.navbar-brand(href="/") EDUCONNECT

    button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
      span.navbar-toggler-icon

    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav.ms-auto

        // If not logged in
        if !user
          li.nav-item
            a.nav-link(href="/auth/login") Login

        // If logged in
        if user
          // =======================
          // ADMIN NAVIGATION
          // =======================
          if user.role === 'admin'
            li.nav-item
              a.nav-link(href="/admin/dashboard") Dashboard
            li.nav-item
              a.nav-link(href="/admin/teachers") Teachers
            li.nav-item
              a.nav-link(href="/admin/students") Students
            li.nav-item
              a.nav-link(href="/admin/courses") Courses
            li.nav-item
              a.nav-link(href="/admin/enroll") Enroll Student


          // =======================
          // TEACHER NAVIGATION
          // =======================
          if user.role === 'teacher'
            li.nav-item
              a.nav-link(href="/teacher/dashboard") Dashboard
            li.nav-item
              a.nav-link(href="/teacher/courses") My Courses
            li.nav-item
              a.nav-link(href="/teacher/assignments") Assignments
            li.nav-item
              a.nav-link(href="/teacher/submissions") Submissions
            li.nav-item
              a.nav-link(href="/teacher/timetable") Timetable

          // =======================
          // STUDENT NAVIGATION
          // =======================
          if user.role === 'student'
            li.nav-item
              a.nav-link(href="/student/dashboard") Dashboard
            li.nav-item
              a.nav-link(href="/student/courses") My Courses
            li.nav-item
              a.nav-link(href="/student/profile") Profile

          // =======================
          // LOGOUT
          // =======================
          li.nav-item
            a.nav-link(href="/auth/logout") Logout
